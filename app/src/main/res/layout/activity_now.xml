<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.now.fitness.nowfitnessui.Activity.NowActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewInputName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="68dp"
        android:text="@string/text_view_input_name" />

    <EditText
        android:id="@+id/editTextInputName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewInputName"
        android:layout_alignStart="@+id/textViewInputName"
        android:layout_below="@+id/textViewInputName"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/button_gen_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextInputName"
        android:layout_alignStart="@+id/editTextInputName"
        android:layout_below="@+id/editTextInputName"
        android:layout_marginTop="31dp"
        android:text="@string/button_genNow"
        android:onClick="onClick_NOWorkout"/>
</RelativeLayout>