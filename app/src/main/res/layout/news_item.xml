<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#EFEFEF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/layout_padding"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite" >

        <ImageView
            android:id="@+id/imageView_TitleImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/now_logo_blue"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textView_TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView_TitleImage"
            android:layout_marginLeft="6dp"
            android:maxLines="2"
            android:text="This is a good Post, I hope it will have 2 lines. "
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_DescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView_TitleImage"
            android:layout_below="@+id/textView_TitleText"
            android:layout_marginLeft="6dp"
            android:textColor="#333333"
            android:text="It's a shameful thing. Lobster head. A careless man, wind up bread. You wear your tins, some kind of mime. Too many limes. Too many limes."/>

        <TextView
            android:id="@+id/textView_PubDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView_TitleImage"
            android:layout_below="@+id/textView_DescriptionText"
            android:layout_marginLeft="6dp"
            android:textSize="12dp"
            android:text=""/>

    </RelativeLayout>
</android.support.v7.widget.CardView>